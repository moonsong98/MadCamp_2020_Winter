<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/visit_review_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/visit_review_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/visit_review_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="7dp"
            android:isIndicator="true"
            android:numStars="5"
            android:saveEnabled="true"
            android:scaleX=".65"
            android:scaleY=".65"
            android:stepSize="1"
            android:transformPivotX="0dp"
            android:transformPivotY="15dp"
            android:theme="@style/RatingBar" />
    </LinearLayout>

    <ImageView
        android:id="@+id/visit_review_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:rotation="90"
        android:contentDescription="@string/gallery_image"
        android:scaleType="centerCrop" />

</RelativeLayout>